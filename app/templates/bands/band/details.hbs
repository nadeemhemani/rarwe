<section class="rr-panel b--solid br1 bw1">
  <div class="rr-inline-form fr">
    <div class="rr-inline-form-group">
      <button
        type="button"
        class="rr-cancel-icon-left"
        {{on "click" this.stopEditing}}
      >
        {{fa-icon "times"}}
      </button>
      <button
        type="button"
        class="rr-action-button fr"
        {{on "click" (if this.isEditing this.save this.edit)}}
      >
        {{if this.isEditing "Save" "Edit"}}
      </button>
    </div>
  </div>
  <h3>Description</h3>
  {{#if this.isEditing}}
    {{#if this.showErrors.description}}
      <div class="rr-form-field-error" data-test-rr="description-error">{{v-get this.model "description" "message" }}</div>
    {{/if}}
    <Textarea class="rr-textarea" @value={{this.model.description}} />
  {{else}}
    <p class="lh-copy">{{this.model.description}}</p>
  {{/if}}
</section>